<body class="login fade-in" data-page="signup">
    <!-- START SIGNUP BOX -->
    <div class="container" id="login-block">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
                <div class="login-box clearfix">
                    <div class="page-icon animate">
                        <img src="{{ assets_backend_folder }}/img/account/register-icon.png" alt="Register icon" />
                    </div>
                    <div class="login-logo">
                        <a href="#">
                            <img src="{{ assets_backend_folder }}/img/account/login-logo.png" alt="Company Logo" />
                        </a>
                    </div>
                    <hr>
                    <div class="login-form">
                        <!-- BEGIN ERROR BOX -->
                        <div class="alert alert-warning alert-dismissible {{ isshow }}" role="alert">
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          {{ dberror }}{{ validation_errors() }}
                        </div>
                        <!-- END ERROR BOX -->
                        {{form_open('register')}}
                            <input name="username" type="text" placeholder="Username" class="input-field" required/>
                            <input name="email" type="email" placeholder="E-mail" class="input-field" required/>
                            <input name="password" type="password" placeholder="Password" class="input-field" required/>
                            <input name="c_password" type="password" placeholder="Confirm Password" class="input-field" required/>
                            <label class="checkbox">
                                <input name="accept" type="checkbox" value="TRUE" required>you accept the <a href="#">terms of use</a>
                            </label>
                            <button type="submit" class="btn btn-login">Sign Up</button>
                        </form>
                        <div class="login-links">
                            <a href="{{ build_url('login') }}">Already have an account?  <strong>Sign In</strong></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- END SIGNUP BOX -->
    <!-- BEGIN MANDATORY SCRIPTS -->
