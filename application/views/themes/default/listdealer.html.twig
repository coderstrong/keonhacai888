{% extends _layout %}

{% block CONTENT %}
	<div class="entry content entry-content type-page">
		<table class="dealers table-responsive list-match list-td table_style">
			<thead>
				<tr>
					<td>RANK</td>
					<td>BOOKMAKER</td>
					<td>PROMOTIONS</td>
					<td>REVIEWS</td>
					<td>POINTSRATING</td>
					<td>INFO</td>
				</tr>
			</thead>
			<tbody>
				{% for item in dealers %}
					<tr>
						{% if loop.index < 4 %}
							<td><img src="/uploads/images/dealer/{{loop.index}}.png" alt="" /></td>
						{% else %}
							<td><strong>{{loop.index}}</strong></td>
						{% endif %}
						<td><img width="100" height="100" src="{{ item['image'] }}" alt="{{ item['name'] }}"></td>
						<td>{{item['promotions']}}</td>
						<td>{{item['reviews']}}</td>
						<td><img src="{{item['point']}}" alt="{{ item['name'] }}"></td>
						<td>{{item['info']}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>

{% endblock %}